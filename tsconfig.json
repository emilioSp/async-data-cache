{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true, // import default
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}